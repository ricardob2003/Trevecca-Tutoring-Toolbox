NODE_ENV=development
HOST=0.0.0.0
PORT=3000

# Database credentials (used by Docker Compose)
POSTGRES_DB=tutoring_toolbox
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME

# Database URL for Prisma (using port 5433 to coexist with local PostgreSQL on 5432)
DATABASE_URL=postgresql://postgres:CHANGE_ME@localhost:5433/tutoring_toolbox

# Redis password (optional - leave empty for no auth in dev)
REDIS_PASSWORD=

# Redis URL for app (using port 6380 to coexist with local Redis on 6379)
REDIS_URL=redis://localhost:6380

# JWT secret - generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=CHANGE_ME

# Email provider: console | azure-communication-services
EMAIL_PROVIDER=console
ACS_CONNECTION_STRING=
ACS_SENDER_ADDRESS=

# Planned Microsoft Entra ID settings
MICROSOFT_TENANT_ID=
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_REDIRECT_URI=http://localhost:3000/api/v1/auth/microsoft/callback
